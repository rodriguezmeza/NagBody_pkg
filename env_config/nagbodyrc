# NagBody:
export PATH=${HOME}/NagBody_pkg/bin:${PATH}
export MANPATH=${HOME}/NagBody_pkg/man:${MANPATH}

# NagBody (/usr/local):
export PATH=/usr/local/nagbody/bin:${PATH}
export MANPATH=/usr/local/nagbody/share/man:${MANPATH}


