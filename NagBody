# make -f NagBody packing_nagbody_CODENAME
#

# ==================================================================
# BEGIN OF NAGBODY GIT REPOSITORY
# ==================================================================

# ==================================================================
# additional_libs
# ==================================================================
# openmpi codes/lib: [Open MPI codes/lib]
#

MAKEOPENMPI = NagBody_sources/additional_libs/openmpi

install_openmpi:
	(cd $(MAKEOPENMPI); $(MAKE) -f NagBody install_all)

clean_openmpi:
	(cd $(MAKEOPENMPI); $(MAKE) -f NagBody clean)

packing_openmpi:
	(cd $(MAKEOPENMPI); $(MAKE) -f NagBody packing_sources_no_nagbody)

packing_nagbody_openmpi:
	(cd $(MAKEOPENMPI); $(MAKE) -f NagBody packing_sources)


