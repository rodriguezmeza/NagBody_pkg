# ==================================================================
# sphz code: zeno -> NagBody adaptation ... sphz -> sphcode_u

MAKESPHZ = NagBody_sources/sph/sphz

install_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody install_all)

clean_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody clean)

packing_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody packing_sources_no_nagbody)

packing_nagbody_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody packing_sources)

packing_gnu_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody packing_gnu_sources)

install_gnu_dirs_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody install_gnu_dirs)

clean_gnu_sphz:
	(cd $(MAKESPHZ); $(MAKE) -f NagBody clean_nagbody_gnu)


