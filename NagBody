# ==================================================================
# CLASS
# ==================================================================
# class codes: [class code (with some modifications)]
#

MAKECLASS = NagBody_sources/class/class

install_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody install_all)

clean_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody clean)

packing_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody packing_sources_no_nagbody)

packing_nagbody_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody packing_sources)

packing_gnu_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody packing_gnu_sources)

install_gnu_dirs_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody install_gnu_dirs)

clean_gnu_class:
	(cd $(MAKECLASS); $(MAKE) -f NagBody clean_gnu)


